{% extends "admin/base.html.twig" %}

{% block title %}Modification d'un commentaire{% endblock %}

{% block body %}

<h1 class="my-5">Modification du commentaire n°{{comment.id}}</h1>

<div class="alert alert-info">
    <strong>Annonce liée : </strong> {{comment.ad.title}} <br>
    <strong>Auteur : </strong> {{comment.author.fullName}} <br>
    <strong>Date de création : </strong> {{comment.createdAt|date('d/m/Y')}} <br>
    <strong>Note : </strong> {{comment.rating}}
</div>

{{form_start(form)}}
{{form_widget(form)}}

<button class="btn btn-primary">
    <i class="fas fa-check"></i>
    Enregistrer les modifications
</button>
{{form_end(form)}}

{% endblock %}